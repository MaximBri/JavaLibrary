<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.library.controller.EBookController"
            prefWidth="400.0" prefHeight="450.0">
    <headerText>Добавление новой электронной книги</headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <Label text="Название:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label text="Издатель:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="publisherField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Дата публикации:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <DatePicker fx:id="publishDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <Label text="Автор:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            
            <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="isbnField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            
            <Label text="Количество страниц:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextField fx:id="pageCountField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            
            <Label text="Жанр:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <TextField fx:id="genreField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            
            <Label text="Формат:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
            <ComboBox fx:id="formatComboBox" GridPane.columnIndex="1" GridPane.rowIndex="7" />
            
            <Label text="Размер файла (МБ):" GridPane.columnIndex="0" GridPane.rowIndex="8" />
            <TextField fx:id="fileSizeField" GridPane.columnIndex="1" GridPane.rowIndex="8" />
            
            <Label text="URL загрузки:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
            <TextField fx:id="downloadUrlField" GridPane.columnIndex="1" GridPane.rowIndex="9" />
            
            <Label text="Защита DRM:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
            <CheckBox fx:id="drmProtectedCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="10" />
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="OK" />
        <ButtonType fx:constant="CANCEL" />
    </buttonTypes>
</DialogPane>
