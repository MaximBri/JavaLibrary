<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.library.controller.MainController">
    <top>
        <ToolBar>
            <Button fx:id="addBookBtn" text="Добавить книгу" styleClass="toolbar-button"/>
            <Button fx:id="reserveBtn" text="Забронировать книгу" styleClass="toolbar-button"/>
            <Button fx:id="deleteBtn" text="Удалить книгу" styleClass="toolbar-button"/>
            <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
            <Label fx:id="countLabel" text="Всего книг: 0"/>
        </ToolBar>
    </top>
    <center>
        <TableView fx:id="bookTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="ID" fx:id="colId" />
                <TableColumn text="Заголовок" fx:id="colTitle" />
                <TableColumn text="Автор" fx:id="colAuthor" />
                <TableColumn text="ISBN" fx:id="colIsbn" />
                <TableColumn text="Статус" fx:id="colStatus" />
                <TableColumn text="Действия" fx:id="colAction" />
            </columns>
        </TableView>
    </center>
</BorderPane>