<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>
<DialogPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.library.controller.ReservationController">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            <Label text="Customer Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <Label text="Due Date:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <DatePicker fx:id="datePicker" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType text="Reserve" buttonData="OK_DONE" />
        <ButtonType text="Cancel" buttonData="CANCEL_CLOSE" />
    </buttonTypes>
</DialogPane>