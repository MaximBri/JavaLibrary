<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.library.controller.NewspaperController"
            prefWidth="400.0" prefHeight="350.0">
    <headerText>Добавление новой газеты</headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <Label text="Название:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label text="Издатель:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="publisherField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Дата публикации:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <DatePicker fx:id="publishDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <Label text="Имя редактора:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="editorNameField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            
            <Label text="Периодичность:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <ComboBox fx:id="frequencyComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            
            <Label text="Национальная:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <CheckBox fx:id="nationalCheckBox" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            
            <Label text="Язык:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
            <TextField fx:id="languageField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="OK" />
        <ButtonType fx:constant="CANCEL" />
    </buttonTypes>
</DialogPane>
